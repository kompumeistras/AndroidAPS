<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_import_source"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:paddingBottom="16dp" />

    <!-- Local Storage option -->
    <LinearLayout
        android:id="@+id/local_storage_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/local_storage_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_directory"
            app:tint="?attr/colorPrimary"
            android:contentDescription="@string/storage_local" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/local_storage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/import_from_local"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/local_storage_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/import_source_local_description"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="?android:attr/listDivider" />

    <!-- Cloud Storage option -->
    <LinearLayout
        android:id="@+id/cloud_storage_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/cloud_storage_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cloud_upload"
            app:tint="?attr/colorPrimary"
            android:contentDescription="@string/storage_google_drive" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cloud_storage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/import_from_cloud"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cloud_storage_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/import_source_cloud_description"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
